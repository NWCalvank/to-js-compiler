{
  "name": "programming-language",
  "type": "module",
  "version": "0.0.1",
  "description": "Proof of concept language compiler for the lulz.",
  "main": ".eslintrc.js",
  "scripts": {
    "build": "node --experimental-modules compiler.js",
    "examples": "node --experimental-modules ./manualJS/examples.js",
    "execute": "node ./dist/output.js",
    "example-server": "node --experimental-modules ./manualJS/server.js",
    "start": "npm run build && npm run execute",
    "test": "node ./test/tests/parser.js"
  },
  "author": "Nathan Calvank",
  "license": "ISC",
  "dependencies": {
    "axios": "^0.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "eslint": "^5.5.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "jasmine": "^3.2.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.7",
    "prettier": "^1.14.2"
  },
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "env": {
      "jasmine": true
    },
    "rules": {
      "import/prefer-default-export": 0,
      "import/extensions": 0
    }
  },
  "prettier": {
    "trailingComma": "es5"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --trailing-comma=es5 --write",
      "git add"
    ],
    "*.json": [
      "prettier --trailing-comma=es5 --write",
      "git add"
    ]
  }
}
